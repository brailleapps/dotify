<?xml version="1.0" encoding="utf-8"?>
<xsl:stylesheet version="2.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:obfl="http://www.daisy.org/ns/2011/obfl" exclude-result-prefixes="obfl">
	<xsl:template match="obfl:table">
		<obfl:block>
			<xsl:apply-templates/>
		</obfl:block>
	</xsl:template>
	<xsl:template match="obfl:tr">
		<xsl:apply-templates select="obfl:td[1]"/>
	</xsl:template>
	<xsl:template match="obfl:td">
		<obfl:block margin-left="2">
			<xsl:copy-of select="node()|@*"/>
			<xsl:if test="count(node())=0">&#x2014;</xsl:if>
			<xsl:apply-templates select="following-sibling::obfl:td[1]"/>
		</obfl:block>
	</xsl:template>
</xsl:stylesheet>